<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.mpandroidchart.MenuVotacion1"
    android:background="@mipmap/bg0">

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TableRow
        android:id="@+id/TableRow01">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/ivonne" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Partido:PRI\nNombre: Ivonne Liliana Álvarez García\nSenadora de la República en la LXII Legislatura del Congreso de la Unión de México
        por Nuevo León."
            android:textSize="10sp"
            />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow02">
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jaime" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Partido:Independiente\nNombre: Jaime Heliodoro Rodríguez Calderón\nPresidente Municipal de García, NL."
            android:textSize="10sp"
            />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow03">
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/felipe" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Partido:PAN\nNombre: Felipe de Jesús Cantú Rodríguez\nPresidente municipal de Monterrey."
            android:textSize="10sp"
            />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow04">
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/elizondo" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Partido:Independiente\nNombre: Fernando Elizondo Barragán\nSenador del Senado de México."
            android:textSize="10sp"
            />
    </TableRow>


    <TableRow
        android:id="@+id/TableRow5">

        <Button android:id="@+id/btnVotar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votar"/>
    </TableRow>


</TableLayout>
</ScrollView>